<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Database files -->
        <include domain="database" path="smart_work_tracker_database"/>
        <include domain="database" path="smart_work_tracker_database-shm"/>
        <include domain="database" path="smart_work_tracker_database-wal"/>

        <!-- Shared preferences -->
        <include domain="sharedpref" path="smart_work_tracker_prefs.xml"/>
        <include domain="sharedpref" path="app_settings.xml"/>

        <!-- Critical app data directories -->
        <include domain="file" path="user_data/"/>
        <include domain="file" path="exports/"/>
        <include domain="file" path="templates/"/>
        <include domain="file" path="config/"/>
        <include domain="file" path="backups/"/> <!-- Your manual backups -->


    </cloud-backup>

    <device-transfer>
        <!-- For device transfers, we can be more generous with what we include -->
        <include domain="database" path="smart_work_tracker_database"/>
        <include domain="database" path="smart_work_tracker_database-shm"/>
        <include domain="database" path="smart_work_tracker_database-wal"/>

        <include domain="sharedpref" path="smart_work_tracker_prefs.xml"/>
        <include domain="sharedpref" path="app_settings.xml"/>

        <include domain="file" path="user_data/"/>
        <include domain="file" path="exports/"/>
        <include domain="file" path="templates/"/>
        <include domain="file" path="config/"/>
        <include domain="file" path="backups/"/>


    </device-transfer>
</data-extraction-rules>