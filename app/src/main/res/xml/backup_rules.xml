<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!--
        Android Auto Backup Configuration for Smart Work Tracker
        This file specifies what data gets backed up automatically to Google Drive
    -->

    <!-- Include the Room database files -->
    <include domain="database" path="smart_work_tracker_database"/>

    <!-- Include shared preferences -->
    <include domain="sharedpref" path="smart_work_tracker_prefs.xml"/>

    <!-- Include app-specific files in internal storage -->
    <include domain="file" path="app_files/"/>

    <!-- Include any additional shared preference files if they exist -->
    <include domain="sharedpref" path="other_prefs.xml"/>


</full-backup-content>